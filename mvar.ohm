mvar {
top = text*
text =
    ws* "@var" ws* "{" ws* idList ws* "}" ws* "=" ws* notSemi+ ";" ws* -- varKW
  | any                                    -- any
ws = " " | "\t" | "\n"
notSemi = ~";" any

idList = id moreID*
id = firstChar restChar*
firstChar = "_" | letter
restChar = "_" | alnum
moreID = "," ws* id
}


